{
  "name": "@open-wc/building-rollup",
  "version": "0.8.6",
  "description": "Default configuration for working with rollup",
  "author": "open-wc",
  "homepage": "https://github.com/open-wc/open-wc/",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/open-wc/open-wc.git",
    "directory": "packages/building-rollup"
  },
  "scripts": {
    "start:build": "es-dev-server --app-index dist/index.html --open",
    "build:modern-and-legacy": "rimraf dist && rollup -c demo/js/rollup.config.js",
    "watch:modern-and-legacy": "rimraf dist && rollup -c demo/js/rollup.config.js --watch & yarn start:build",
    "build:modern": "rimraf dist && rollup -c demo/js/rollup.modern.config.js",
    "watch:modern": "rimraf dist && rollup -c demo/js/rollup.modern.config.js --watch & yarn start:build",
    "build:ts": "rimraf dist && rollup -c demo/ts/rollup.config.js",
    "watch:ts": "rimraf dist && rollup -c demo/ts/rollup.config.js --watch & yarn start:build",
    "build:ts-babel": "rimraf dist && rollup -c demo/ts-babel/rollup.config.js",
    "watch:ts-babel": "rimraf dist && rollup -c demo/ts-babel/rollup.config.js --watch & yarn start:build",
    "prepublishOnly": "../../scripts/insert-header.js"
  },
  "keywords": [
    "open-wc",
    "web-components",
    "modules",
    "rollup"
  ],
  "files": [
    "dom5-fork",
    "plugins",
    "src",
    "*.js"
  ],
  "dependencies": {
    "@babel/core": "^7.3.3",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-syntax-import-meta": "^7.2.0",
    "@babel/preset-env": "^7.0.0",
    "@open-wc/building-utils": "^2.4.2",
    "babel-plugin-bundled-import-meta": "^0.3.0",
    "babel-plugin-template-html-minifier": "^3.0.0",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-index-html": "^1.4.3",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-terser": "^4.0.4"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/plugin-proposal-decorators": "^7.3.0",
    "@babel/preset-typescript": "^7.3.3",
    "es-dev-server": "^1.6.5",
    "lit-element": "^2.0.1",
    "rimraf": "^2.6.3",
    "rollup": "^1.4.0",
    "rollup-plugin-cpy": "^1.1.0",
    "rollup-plugin-typescript2": "^0.19.3",
    "rollup-plugin-visualizer": "^1.0.2"
  }
}
