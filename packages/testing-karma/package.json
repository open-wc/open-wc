    "@open-wc/webpack-import-meta-loader": "^0.2.0",
    "@webcomponents/webcomponentsjs": "^2.2.0",
    "babel-loader": "^8.0.0",
    "babel-plugin-bundled-import-meta": "^0.3.0",
    "istanbul-instrumenter-loader": "^3.0.0",
    "karma": "^4.0.0",
